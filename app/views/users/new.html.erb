<h1>Signup!</h1>

<%= form_for :user ,:url => users_path do |f| %>
<table>
<tr><td colspan="2">
	
<% if @user.errors.any? %>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
<% end %>

</td></tr>
<tr>

<td>  User Type:</td><td> <%= f.select :user_type,["Event_manager","audience"] %></td></tr>
<td>  Name:</td><td> <%= f.text_field :name %></td></tr>

<tr><td> Email:</td><td> <%= f.text_field :email %></td></tr>


<tr><td> Password: </td><td> <%= f.password_field :password %></td></tr><tr><td>
  Password Confirmation: </td><td> <%= f.password_field :password_confirmation %> </td></tr>

  <tr><td>
  <%= f.submit "Submit" %></td></tr></table>

<% end %>