<table>

<tr><th>Posts-Title</th><th>Comments/Likes</th></tr>
<% if(! @post.nil?)%>
<% @post.each  do |post|%>
<tr><td>
<%= post.title if post.id%></td>
	<% if current_user%>
	<td>
<%= link_to "show" ,post_path(post)%> | 
<%= link_to "Edit" ,edit_post_path(post)%>  |
<%= link_to "delete" ,post_path(post),method:"delete"%>  
 
</td>
<%else%>
<td><%= link_to"View Comments",post_path(post)%>
		</td>
<%end%>
<%end%>

</tr>
<% end %>

</table>



